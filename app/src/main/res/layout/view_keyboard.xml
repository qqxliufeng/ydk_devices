<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/view_keyboard_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_keyboard_left_submit"
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="@dimen/keyboard_submit_height"
            android:layout_marginTop="0.01dp"
            android:background="@drawable/bg_keyboard_submit"
            android:gravity="center"
            android:text="验\n证"
            android:textColor="#ffffff"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/view_keyboard_left_delete"
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="@dimen/keyboard_height"
            android:layout_marginTop="0.01dp"
            android:background="@drawable/bg_keyboard_delete"
            android:gravity="center"
            android:text="退格"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/view_keyboard_left_back"
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="@dimen/keyboard_height"
            android:layout_marginTop="0.01dp"
            android:background="@drawable/bg_keyboard_back"
            android:gravity="center"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_keyboard_1"
            style="@style/KeyboardNumberStyle"
            android:text="1" />

        <TextView
            android:id="@+id/view_keyboard_4"
            style="@style/KeyboardNumberStyle"
            android:text="4" />

        <TextView
            android:id="@+id/view_keyboard_7"
            style="@style/KeyboardNumberStyle"
            android:text="7" />

        <TextView
            android:id="@+id/view_keyboard_star"
            style="@style/KeyboardNumberStyle"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_keyboard_2"
            style="@style/KeyboardNumberStyle"
            android:text="2" />

        <TextView
            android:id="@+id/view_keyboard_5"
            style="@style/KeyboardNumberStyle"
            android:text="5" />

        <TextView
            android:id="@+id/view_keyboard_8"
            style="@style/KeyboardNumberStyle"
            android:text="8" />

        <TextView
            android:id="@+id/view_keyboard_0"
            style="@style/KeyboardNumberStyle"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_keyboard_3"
            style="@style/KeyboardNumberStyle"
            android:text="3" />

        <TextView
            android:id="@+id/view_keyboard_6"
            style="@style/KeyboardNumberStyle"
            android:text="6" />

        <TextView
            android:id="@+id/view_keyboard_9"
            style="@style/KeyboardNumberStyle"
            android:text="9" />

        <TextView
            android:id="@+id/view_keyboard_clear"
            style="@style/KeyboardNumberStyle"
            android:text="清空" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_keyboard_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_keyboard_right_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_height"
            android:layout_margin="0.01dp"
            android:background="@drawable/bg_keyboard_back"
            android:gravity="center"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/view_keyboard_right_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_height"
            android:layout_margin="0.01dp"
            android:background="@drawable/bg_keyboard_delete"
            android:gravity="center"
            android:text="退格"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/view_keyboard_right_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_submit_height"
            android:layout_margin="0.01dp"
            android:background="@drawable/bg_keyboard_submit"
            android:gravity="center"
            android:text="验\n证"
            android:textColor="#ffffff"
            android:textSize="28sp" />
    </LinearLayout>

</LinearLayout>
